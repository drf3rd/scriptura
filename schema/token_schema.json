{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Token Schema",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "hebrew": { "type": "string" },
    "transliteration": { "type": "string" },
    "root": { "type": ["string", "array"] },
    "gloss": { "type": "string" },
    "notes": { "type": "string" }
  },
  "required": ["id", "hebrew", "gloss"]
}
